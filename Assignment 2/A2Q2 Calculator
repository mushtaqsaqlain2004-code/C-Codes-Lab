#include<stdio.h>
int main()
{
    int a,b, sum=0, diff=0, prod=0;
    float div=0.0;
    printf("Enter first number: ");
    scanf("%d", &a);
    printf("Enter second number: ");
    scanf("%d", &b);
    sum=a+b;
    diff=a-b;
    prod=a*b;
    div=a/b;
    printf("Addition: %d\n", sum);
    printf("Subtraction: %d\n", diff);
    printf("Multiplication: %d\n", prod);
    printf("Division: %f\n", div);
}
